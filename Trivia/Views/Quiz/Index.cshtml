
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="container container-outer">

    <div class="container" style="margin-left: -15px; text-align:center;">

        <div class="game-type">
            <h1 class="headline-main">Standard mode</h1>
            <div style=" margin-top:40px; margin-bottom:40px; ">
                <p class="stopwatch" style="font-size:30px; text-align:justify;">
                    Complete the set of <b>10</b> questions <b>as fast as possible</b> and beat the game by giving <b>correct</b> anwers. <b>Good luck!</b>
                </p>
                <div class="btn-group btn-group-justified">
                    <a href="/Quiz/Play/Standard/en" class="btn btn-default btn-lg btn-block btn-play">Play!</a>
                    <a href="/Quiz/Play/Standard/es" class="btn btn-default btn-lg btn-block btn-play">Jugar!</a>
                </div>
            </div>
        </div>

        <div class="game-type">
            <h1 class="headline-main">Reverse mode</h1>
            <div style=" margin-top:40px; margin-bottom:40px; ">
                <p class="stopwatch" style="font-size:30px; text-align:justify;">
                    Complete the set of <b>10</b> questions <b>as fast as possible</b> and beat the game by giving <b>incorrect</b> anwers. <b>Good luck!</b>
                </p>
                <div class="btn-group btn-group-justified">
                    <a href="/Quiz/Play/Reverse/en" class="btn btn-default btn-lg btn-block btn-play">Play!</a>
                    <a href="/Quiz/Play/Reverse/es" class="btn btn-default btn-lg btn-block btn-play">Jugar!</a>
                </div>
            </div>
        </div>

        <div class="game-type">
            <h1 class="headline-main">Extreme mode</h1>
            <div style=" margin-top:40px; margin-bottom:40px; ">
                <p class="stopwatch" style="font-size:30px; text-align:justify;">
                    Complete the set of <b>10</b> questions <b>as fast as possible</b> and beat the game by <b>alternating correct and incorrect</b> anwers. 
                    Start with a correct answer. <b>Good luck!</b>
                </p>
                <div class="btn-group btn-group-justified">
                    <a href="/Quiz/Play/Extreme/en" class="btn btn-default btn-lg btn-block btn-play">Play!</a>
                    <a href="/Quiz/Play/Extreme/es" class="btn btn-default btn-lg btn-block btn-play">Jugar!</a>
                </div>
            </div>
        </div>

    </div>
</div>

