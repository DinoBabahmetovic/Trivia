
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="container container-outer">

    <div class="container" style="margin-left: -15px; text-align:center;">

        <div style="float:left; width:40%; margin-left:5%; margin-right:5%;">
            <h1 class="headline-main">Standard mode</h1>
            <div style=" margin-top:40px; margin-bottom:40px; ">
                <p class="stopwatch" style="font-size:24px; text-align:justify;">
                    Complete the set of <b>10</b> questions as fast as possible and beat the game! If you give an incorrect answer you'll be returned to the first question. <b>Good luck!</b>
                </p>
                <a href="/Quiz/Play/Standard" class="btn btn-default btn-lg btn-block btn-play">Play!</a>
            </div>
        </div>

        <div style="float:right; width:40%; margin-left:5%; margin-right:5%;">
            <h1 class="headline-main">Difficult mode</h1>
            <div style=" margin-top:40px; margin-bottom:40px; ">
                <p class="stopwatch" style="font-size:24px; text-align:justify;">
                    Complete the set of <b>10</b> questions as fast as possible and beat the game by giving <b>incorrect</b> anwers. If you give a correct answer you'll be returned to the first question. <b>Good luck!</b>
                </p>
                <a href="/Quiz/Play/Difficult" class="btn btn-default btn-lg btn-block btn-play">Play!</a>
            </div>
        </div>

    </div>
</div>

