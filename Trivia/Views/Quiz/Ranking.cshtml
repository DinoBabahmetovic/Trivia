@model Trivia.ViewModel.RankingViewModel
@{
    ViewBag.Title = "Ranking";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="container container-outer">
    <div class="container container-question" style="margin-top: 20px;">
        <h1 class="headline" id="line">Scoreboard:</h1>
    </div>

    <div class="container" style="margin-left: -15px; text-align:center;">

        <table class="table table-striped table-hover table-ranking">
            <thead>
                <tr style="background-color: #3aafa9;">
                    <td colspan="5" style="color: white; text-align: center;">Standard mode</td>
                </tr>
                <tr style="background-color: #def2f1;">
                    <th width="10%"></th>
                    <th width="45%" align="left">Player</th>
                    <th width="15%" align="right">Minutes</th>
                    <th width="15%" align="right">Seconds</th>
                    <th width="15%" align="right">Milisecs</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int j = 1;
                    int mins2, secs2, milis2;
                }
                @foreach (var x in Model.RankingsStandard)
                {
                    mins2 = (int)x.time / 60000;
                    secs2 = (int)x.time / 1000 - mins2 * 60;
                    milis2 = (int)x.time - mins2 * 60 * 1000 - secs2 * 1000;
                    <tr>
                        <td class="@(j == 1 ? "gold" : "") @(j == 2 ? "silver" : "") @(j == 3 ? "bronze" : "")">@j.</td>
                        <td align="left">@x.player</td>
                        <td align="right">@mins2</td>
                        <td align="right">@secs2</td>
                        <td align="right">@milis2</td>
                    </tr>
                    j++;
                }
            </tbody>
        </table>

        <table class="table table-striped table-hover table-ranking">
            <thead>
                <tr style="background-color: #3aafa9;">
                    <td colspan="5" style="color: white; text-align: center;">Reverse mode</td>
                </tr>
                <tr style="background-color: #def2f1;">
                    <th width="10%"></th>
                    <th width="45%" align="left">Player</th>
                    <th width="15%" align="right">Minutes</th>
                    <th width="15%" align="right">Seconds</th>
                    <th width="15%" align="right">Milisecs</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    int mins, secs, milis;
                }
                @foreach (var x in Model.RankingsReverse)
                {
                    mins = (int)x.time / 60000;
                    secs = (int)x.time / 1000 - mins * 60;
                    milis = (int)x.time - mins * 60 * 1000 - secs * 1000;
                    <tr>
                        <td class="@(i == 1 ? "gold" : "") @(i == 2 ? "silver" : "") @(i == 3 ? "bronze" : "")">@i.</td>
                        <td align="left">@x.player</td>
                        <td align="right">@mins</td>
                        <td align="right">@secs</td>
                        <td align="right">@milis</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>

        <table class="table table-striped table-hover table-ranking">
            <thead>
                <tr style="background-color: #3aafa9;">
                    <td colspan="5" style="color: white; text-align: center;">Extreme mode</td>
                </tr>
                <tr style="background-color: #def2f1;">
                    <th width="10%"></th>
                    <th width="45%" align="left">Player</th>
                    <th width="15%" align="right">Minutes</th>
                    <th width="15%" align="right">Seconds</th>
                    <th width="15%" align="right">Milisecs</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int k = 1;
                    int mins3, secs3, milis3;
                }
                @foreach (var x in Model.RankingsExtreme)
                {
                    mins3 = (int)x.time / 60000;
                    secs3 = (int)x.time / 1000 - mins3 * 60;
                    milis3 = (int)x.time - mins3 * 60 * 1000 - secs3 * 1000;
                    <tr>
                        <td class="@(k == 1 ? "gold" : "") @(k == 2 ? "silver" : "") @(k == 3 ? "bronze" : "")">@k.</td>
                        <td align="left">@x.player</td>
                        <td align="right">@mins3</td>
                        <td align="right">@secs3</td>
                        <td align="right">@milis3</td>
                    </tr>
                    k++;
                }
            </tbody>
        </table>

    </div>
</div>

